pkgname=libffi
pkgver=v3.4.4
pkgrel=0
pkgdesc="The libffi library provides a portable, high level programming interface to various calling conventions. This allows a programmer to call any function specified by a call interface description at run time."
url="https://github.com/libffi/libffi"
archs=("armeabi-v7a" "arm64-v8a")
license=("GPL-2.0 license")
depends=()
makedepends=("automake")
# 官方下载地址https://github.com/libffi/$pkgname/archive/refs/tags/$pkgver.tar.gz受网络影响可能存在下载失败的情况，现使用gitee镜像可以与官方仓库保持同步
source="https://gitee.com/lycium_pkg_mirror/$pkgname/repository/archive/$pkgver.zip"
buildtools="configure"

autounpack=true
downloadpackage=true
genconfigure=true
autoconfbuild=true
libtoolbuild=true
prefixpath=

builddir=$pkgname-$pkgver
packagename=$pkgname-$pkgver.zip

source envset.sh
host=

 # 编译autoconf
buildgnutool() {
    toolname=$1
    toolver=$2
    toolpath=$toolname-$toolver
    prefixpath=`pwd`/$toolpath/install
    down=0
    rm -rf $toolpath
    if [ ! -f  $toolname-$toolver.tar.xz ];then
        wget -O $toolname-$toolver.tar.gz -c http://ftp.gnu.org/gnu/$toolname/$toolname-$toolver.tar.xz
        down=$?
    fi
    if [ $down -ne 0 ];then
        return -1
    fi
    tar -xf $toolname-$toolver.tar.gz
    cd $toolpath
    ./configure --prefix=$prefixpath >> `pwd`/build.log 2>&1
    make -j4 VERBOSE=1 >> `pwd`/build.log 2>&1
    make -j4 install VERBOSE=1 >> `pwd`/build.log 2>&1
    if [ $? -ne 0 ];then
        return -2
    fi
    cd $OLDPWD
}

prepare() {
    # 需要linux 安装automake, autoconf(2.71以上),libtool, libltdl7-dev
    if [ $libtoolbuild == true ];then
        buildgnutool libtool 2.4.6
        if [ $? -ne 0 ];then
            return -1
        fi 
        export PATH=$PATH:$prefixpath/bin:$prefixpath/lib:$prefixpath/share
        export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$prefixpath/lib
        export LIBTOOL=$prefixpath/bin/libtool
        export ACLOCAL_PATH=$prefixpath/share/aclocal
        libtoolbuild=false
        unset prefixpath
    fi
    if [ $autoconfbuild == true ];then
        buildgnutool autoconf 2.71
        if [ $? -ne 0 ];then
            return -2
        fi
        export PATH=$PATH:$prefixpath/bin:$prefixpath/share
        export AUTOCONF=$prefixpath/bin/autoconf
        autoconfbuild=false
        unset prefixpath
    fi

    mkdir $builddir/$ARCH-build
    if [ $genconfigure == true ];then
        cd $builddir
        ./autogen.sh >> `pwd`/build.log 2>&1
        if [ $? -ne 0 ];then
            return -3
        fi
        genconfigure=false
        cd $OLDPWD
    fi
    if [ $ARCH == "armeabi-v7a" ];then
        setarm32ENV
        host=arm-linux
        # armv7a汇编指令需要使用fp registers, 否则汇编代码报错，无法编译
        export CFLAGS="$CFLAGS -mfloat-abi=softfp"
    elif [ $ARCH == "arm64-v8a" ];then
        setarm64ENV
        host=aarch64-linux
    else
        echo "$ARCH not support"
        return -1
    fi
}

build() {
    cd $builddir
    ./configure "$@" --host=$host --enable-static=yes --disable-multi-os-directory --enable-builddir=$ARCH-build > `pwd`/$ARCH-build/build.log 2>&1
    make -C $ARCH-build -j4  VERBOSE=1 >> `pwd`/$ARCH-build/build.log 2>&1
    ret=$?
    cd $OLDPWD
    return $ret
}

package() {
    cd $builddir
    make -C $ARCH-build install VERBOSE=1 >> `pwd`/$ARCH-build/build.log 2>&1
    cd $OLDPWD
    unset host
    if [ $ARCH == "armeabi-v7a" ];then
        unsetarm32ENV
    elif [ $ARCH == "arm64-v8a" ];then
        unsetarm64ENV
    else
        echo "$ARCH not support"
        return -1
    fi
}

check() {
    echo "The test must be on an OpenHarmony device!"
    # TODO
}

# 清理环境
cleanbuild(){
    rm -rf ${PWD}/$builddir #${PWD}/$packagename
}