pkgname=cpp-libucd
pkgver=master
pkgrel=0
pkgdesc="cpp-libucd provides an object-oriented character encoding auto-detection feature that can intelligently recognize the encoding format of text files."
url="https://github.com/yhfudev/cpp-libucd"
archs=("armeabi-v7a" "arm64-v8a")
license=("GPL 2.0")
depends=()
makedepends=()

source="https://github.com/yhfudev/$pkgname"
commitid=d6ee722e8d7c0404bba9dfd73e7ad898ebf50599
autounpack=false
downloadpackage=false
buildtools="configure"

builddir=$pkgname-${pkgver}
packagename=${builddir}.zip
patchflag=false
cloneflag=true
source envset.sh
host=

prepare() {
    if $cloneflag
    then
        mkdir $builddir
        git clone $source $builddir > $publicbuildlog 2>&1
        if [ $? != 0 ]
        then
            return -1
        fi
        cd $builddir
        git reset --hard $commitid > $publicbuildlog 2>&1
        if [ $? != 0 ]
        then
            return -1
        fi
        cd $OLDPWD
        cloneflag=false
    fi
    cd $builddir
    touch README NEWS AUTHORS LICENSE config.h.in >> $buildlog 2>&1
    libtoolize --copy --force >> $buildlog 2>&1
    aclocal >> $buildlog 2>&1
    automake -a -c >> $buildlog 2>&1
    autoconf >> $buildlog 2>&1
    cd $OLDPWD
    cp -rf $builddir $pkgname-$ARCH-build
    if [ $ARCH == "armeabi-v7a" ]
    then
        setarm32ENV
        host=arm-linux
        export LDFLAGS="${OHOS_SDK}/native/llvm/lib/clang/$CLANG_VERSION/lib/arm-linux-ohos/a7_hard_neon-vfpv4/libclang_rt.builtins.a ${LDFLAGS} -static"
    elif [ $ARCH == "arm64-v8a" ]
    then
        setarm64ENV
        host=aarch64-linux
        LDFLAGS="-static"
    else
        echo "$ARCH not support!"
        return -1
    fi

}

build() {
    cd $pkgname-$ARCH-build
    #使用系统原生的 malloc/realloc 函数
    PKG_CONFIG_LIBDIR="${pkgconfigpath}" ./configure "$@" \
        --disable-shared \
        --enable-static \
        ac_cv_func_malloc_0_nonnull=yes \
        ac_cv_func_realloc_0_nonnull=yes \
        --host=$host \
        --disable-icu >> $buildlog 2>&1
    make clean >> $buildlog 2>&1
    make ChangeLog >> $buildlog 2>&1
    make dist >> $buildlog 2>&1
    cp lib*-*.tar.gz pacman >> $buildlog 2>&1
    make check >> $buildlog 2>&1
    $MAKE VERBOSE=1 >> $buildlog 2>&1
    ret=$?
    cd $OLDPWD
    return $ret
}

package() {
    cd $pkgname-$ARCH-build
    $MAKE VERBOSE=1 install >> $buildlog 2>&1
    ret=$?
    cd $OLDPWD
}

check() {
    if [ $ARCH == "arm64-v8a" ];then
        unsetarm64ENV
    elif [ $ARCH == "armeabi-v7a" ];then
        unsetarm32ENV
    else
        echo "${ARCH} not support"
        return -2
    fi
    unset host
    return $ret

    echo "The test must be on an OpenHarmony device!"
}

# 清理环境
cleanbuild(){
    rm -rf ${PWD}/$builddir $pkgname-armeabi-v7a-build  $pkgname-arm64-v8a-build
}