pkgname=BehaviorTree.CPP
pkgver=4.1.1
pkgrel=0
pkgdesc="This C++ library provides a framework to create BehaviorTrees. It is designed to be flexible, easy to use and fast."
url="https://www.behaviortree.dev/"
archs=("armeabi-v7a" "arm64-v8a")
license=("MIT")
depends=()
makedepends=()

source="https://codeload.github.com/BehaviorTree/${pkgname}/zip/refs/tags/$pkgver"

downloadpackage=true 
autounpack=true 
builddir=$pkgname-${pkgver} 
packagename=$builddir.zip 
patchflag=true

prepare() {
    if [ $patchflag == true ];then
        cd $builddir
        # behaviortree原生库有一项测试用例依赖三方库（无法编译），打补丁注释掉
        patch -p1 < `pwd`/../behaviortree_oh_pkg.patch
        # patch只需要打一次,关闭打patch
        patchflag=false
        cd $OLDPWD
    fi
    mkdir -p $builddir/$ARCH-build
}

build() {
    cd $builddir
    ${OHOS_SDK}/native/build-tools/cmake/bin/cmake "$@" -DOHOS_ARCH=$ARCH \
          -DBTCPP_UNIT_TESTS=OFF -DBTCPP_GROOT_INTERFACE=OFF -DBTCPP_SQLITE_LOGGING=OFF \
          -DCMAKE_CXX_FLAGS="-Wno-unused-command-line-argument -Wno-unused-lambda-capture" \
          -B$ARCH-build -S./ -L > `pwd`/$ARCH-build/build.log 2>&1
    make VERBOSE=1 -j4 -C $ARCH-build >> `pwd`/$ARCH-build/build.log 2>&1
    ret=$?
    cd $OLDPWD
    return $ret
}

package() {
    cd $builddir
    make -C $ARCH-build install >> `pwd`/$ARCH-build/build.log 2>&1
    cd $OLDPWD
}

check() {
    echo "The test must be on an OpenHarmony device!"
    # TODO
}

# 清理环境
cleanbuild() {
    rm -rf ${PWD}/$builddir #${PWD}/$packagename
}
