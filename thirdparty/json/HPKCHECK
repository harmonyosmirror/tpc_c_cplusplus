source HPKBUILD > /dev/null 2>&1
logfile=${LYCIUM_THIRDPARTY_ROOT}/${pkgname}/${pkgname}_${ARCH}_${OHOS_SDK_VER}_test.log


openharmonycheck() {
    res=0
    cd $builddir/${ARCH}-build
    ctest -E "download_test_data|cmake_import_configure|cmake_import_build|cmake_import_minver_build|cmake_add_subdirectory_configure|cmake_add_subdirectory_build|cmake_fetch_content_configure|cmake_fetch_content_build|cmake_fetch_content2_configure|cmake_fetch_content2_build|cmake_target_include_directories_configure|cmake_target_include_directories_build|cmake_import_minver_configure" > ${logfile} 2>&1
    res=$?
    cd $OLDPWD
    return $res
}
