pkgname=openh264
pkgver=v2.6.0
pkgrel=0
pkgdesc="Open Source H.264 Codec"
url="http://www.openh264.org/"
archs=("armeabi-v7a" "arm64-v8a")
license=("BSD-2-Clause")
depends=()
makedepends=()
source="https://github.com/cisco/$pkgname/archive/refs/tags/$pkgver.tar.gz"
autounpack=true
downloadpackage=true
buildtools="configure"

builddir=$pkgname-${pkgver:1}
packagename=$builddir.tar.gz
patchflag=true
source envset.sh

arch=
prepare() {
    if [ $patchflag == true ]
    then
      cd $builddir
      # googletest使用国内的 Gitee 平台镜像
      patch -p1 < ../openh264_ohos.patch
      cd $OLDPWD
      patchflag=false
    fi
    cp -rf $builddir $builddir-$ARCH-build
    if [ $ARCH == "armeabi-v7a" ]
    then
        setarm32ENV
        arch=armeabi
    elif [ $ARCH == "arm64-v8a" ]
    then
        setarm64ENV
        arch=aarch64
    else
        echo "${ARCH} not support"
        return -1
    fi
        return 0
}

#参数1
build() {
    cd $builddir-$ARCH-build
    envarch=$ARCH
    $MAKE PREFIX=$LYCIUM_ROOT/usr/$pkgname/$ARCH ARCH=$arch > $buildlog 2>&1
    ret=$?
    cd $OLDPWD
    ARCH=$envarch
    return $ret
}

package() {
    cd $builddir-$ARCH-build
    envarch=$ARCH
    $MAKE install ARCH=$arch PREFIX=$LYCIUM_ROOT/usr/$pkgname/$ARCH >> $buildlog 2>&1
    ARCH=$envarch
    cd $OLDPWD
}

check() {
    cd $builddir-$ARCH-build
    make gtest-bootstrap >> $builddir-$ARCH-test-build.log 2>&1
    ret=$?
    if [ $ret -ne 0 ]
    then
        echo "make gtest-bootstrap fail!" >> $builddir-$ARCH-test-build.log 2>&1
        unset arch
        cd $OLDPWD
        return $ret
    fi
    $MAKE codec_unittest ARCH=$arch >> $builddir-$ARCH-test-build.log 2>&1
    ret=$?
    if [ $ret -ne 0 ]
    then
        echo "make codec_unittest fail!" >> $builddir-$ARCH-test-build.log 2>&1
        unset arch
        cd $OLDPWD
        return $ret
    fi
    # 清除环境设置
    if [ $ARCH == "armeabi-v7a" ]
    then
        unsetarm32ENV
    elif [ $ARCH == "arm64-v8a" ]
    then
        unsetarm64ENV
    fi
    unset arch
    echo "The test must be on an OpenHarmony device!"
    cd $OLDPWD
    return $ret

}

# 清理环境
cleanbuild() {
    rm -rf ${PWD}/$builddir $builddir-armeabi-v7a-build $builddir-arm64-v8a-build
}