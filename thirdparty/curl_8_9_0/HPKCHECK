source HPKBUILD > /dev/null 2>&1
logfile=${LYCIUM_THIRDPARTY_ROOT}/${pkgname:0:4}/${pkgname:0:4}_${ARCH}_${OHOS_SDK_VER}_test.log
openharmonycheck() {
    res=0
    ## checkNetWork
    ping www.baidu.com -c3  >> /dev/null
    if [ $? -ne 0 ]
    then
        echo "the network not ready, the test depends the network! make sure the network is OK!!"
        return 1
    fi

    cd ${builddir}/${ARCH}-build
    cp ../../curl_test.sh ./
    touch data.txt
    bash curl_test.sh > ${logfile} 2>&1
    res=$?
    cd $OLDPWD

    return $res
}
