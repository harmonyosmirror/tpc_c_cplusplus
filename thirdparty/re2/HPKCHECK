source HPKBUILD > /dev/null 2>&1    # 导入HPKBUILD文件
logfile=${LYCIUM_THIRDPARTY_ROOT}/${pkgname}/${pkgname}_${ARCH}_${OHOS_SDK_VER}_test.log

# 测试前的准备, 如果不需要可以不写。
checkprepare(){
    return 0
}

# 在OH环境执行测试的接口
openharmonycheck() {
    res=0                               
    cd ${builddir}/${ARCH}-build
    #ctest一键测试时，exhaustive1_test 和 exhaustive_test 会超时，因此单独执行
    ./exhaustive1_test >> ${logfile} 2>&1
    if [ $? -ne 0 ]; then
        res=1
        # 保存测试失败日志
        mkdir ${LYCIUM_FAULT_PATH}/${pkgname}
        cp Testing/Temporary/LastTest.log ${LYCIUM_FAULT_PATH}/${pkgname}/advanced_test_failed.log
    fi 

    ./exhaustive_test >> ${logfile} 2>&1
    if [ $? -ne 0 ]; then
        res=1
        mkdir ${LYCIUM_FAULT_PATH}/${pkgname}
        cp Testing/Temporary/LastTest.log ${LYCIUM_FAULT_PATH}/${pkgname}/fast_test_failed.log
    fi
      
    ctest >> ${logfile} 2>&1            
    res=$?                              
    cd $OLDPWD                          

    return $res                         
}