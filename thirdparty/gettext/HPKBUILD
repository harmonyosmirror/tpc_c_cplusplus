# Contributor: wlxuz <wlxuz@isoftstone.com>
# Maintainer: wlxuz <wlxuz@isoftstone.com>

pkgname=gettext
pkgver=0.22
pkgrel=0
pkgdesc="The libffi library provides a portable, high level programming interface to various calling conventions. This allows a programmer to call any function specified by a call interface description at run time."
url="https://github.com/libffi/libffi"
archs=("armeabi-v7a" "arm64-v8a")
license=("GPLv3.0 license")
depends=()
makedepends=()
source="https://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.gz"
buildtools="configure"

autounpack=true
downloadpackage=true
patchflag=true

builddir=$pkgname-$pkgver
packagename=$pkgname-$pkgver.tar.gz

source envset.sh
host=

prepare() {
    mkdir $builddir/$ARCH-build
    if [ $ARCH == "armeabi-v7a" ];then
        setarm32ENV
        host=arm-linux
    elif [ $ARCH == "arm64-v8a" ];then
        setarm64ENV
        host=aarch64-linux
    else
        echo "$ARCH not support"
        return -1
    fi
}

build() {
    cd $builddir/$ARCH-build
    # 必须链接libc,否则找不到符号
    LDFLAGS="$LDFLAGS -Wl,$OHOS_SDK/native/sysroot/usr/lib/$host-ohos/libc.a" \
        CFLAGS="$CFLAGS -Wno-error=int-conversion" \
        ../configure "$@" --host=$host --srcdir=`pwd`/../ > `pwd`/build.log 2>&1
    make -j4  VERBOSE=1 >> `pwd`/build.log 2>&1
    ret=$?
    cd $OLDPWD
    return $ret
}

package() {
    cd $builddir/$ARCH-build
    make install VERBOSE=1 >> `pwd`/build.log 2>&1
    cd $OLDPWD
}

check() {
    echo "The test must be on an OpenHarmony device!"
    # real test
}

# 清理环境
cleanbuild(){
    rm -rf ${PWD}/$builddir #${PWD}/$packagename
}