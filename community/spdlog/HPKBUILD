pkgname=spdlog
pkgver=v1.9.2
pkgvel=0
url="https://github.com/gabime/spdlog"
archs=("armeabi-v7a" "arm64-v8a")
license=("MIT")
depends=("fmt-8.1.1")
makedepends=()

source="https://codeload.github.com/gabime/${pkgname}/tar.gz/refs/tags/${pkgver}"

builddir=${pkgname}-${pkgver:1}
packagename=${builddir}.tar.gz
autounpack=ture
downloadpackage=ture
buildtools="cmake"

prepare() {
    mkdir -p $builddir/$ARCH-build
}

build() {
    cd $builddir
    ${OHOS_SDK}/native/build-tools/cmake/bin/cmake "$@" -DSPDLOG_BUILD_TESTS=ON\
    -DSPDLOG_FMT_EXTERNAL_HO=ON -B$ARCH-build -S./ > $buildlog 2>&1
    $MAKE VERBOSE=1 -C $ARCH-build >> $buildlog 2>&1
    ret=$?
    cd $OLDPWD
    return $ret
}

package() {
    cd $builddir
    $MAKE -C $ARCH-build install >> $buildlog 2>&1
    cd $OLDPWD
}

check() {
    echo "The test must be on an OpenHarmony device!"
}

# 清理环境
cleanbuild() {
    rm -rf ${PWD}/$builddir
}
