pkgname=GmSSL
pkgver=GmSSL-v1
pkgrel=0
pkgdesc="支持国密SM2/SM3/SM4/SM9/SSL的密码工具箱"
url="https://github.com/guanzhi/GmSSL"
archs=("arm64-v8a") # "armeabi-v7a" 
license=("Apache License 2.0")
depends=()
makedepends=()
buildtools="configure"

source="https://github.com/guanzhi/$pkgname/archive/refs/heads/$pkgver.zip"

autounpack=true
downloadpackage=true

builddir=$pkgname-$pkgver
packagename=$builddir.zip

source envset.sh
machine=

prepare() {
    cp -r $builddir $builddir-$ARCH-build
    if [ $ARCH == "armeabi-v7a" ]
    then
        setarm32ENV
        machine=arm
    elif [ $ARCH == "arm64-v8a" ]
    then
        setarm64ENV
        machine=aarch64
    else
        echo "$ARCH not support!"
        return -1
    fi
}

build() {
    cd $builddir-$ARCH-build
    export MACHINE=$machine
    export SYSTEM=linux2
    ./config --prefix=$LYCIUM_ROOT/usr/$pkgver/$ARCH shared > $buildlog 2>&1
    $MAKE VERBOSE=1 >> $buildlog 2>&1
    ret=$?
    cd $OLDPWD
    return $ret
}

package() {
    cd $builddir-$ARCH-build
    $MAKE VERBOSE=1 install >> $buildlog 2>&1
    cd $OLDPWD
}

check() {
    cd $builddir-$ARCH-build
    # 删除一个不支持的测试用例
    sed -i '1,/test_ssl/s/test_ssl//' test/Makefile
    cd $OLDPWD

    # test_cms这个测试用例，需要更新openssl证书目录test/smime-certs下的证书，才能通过
    echo "The test must be on an OpenHarmony device!"
}

# 清理环境
cleanbuild() {
    rm -rf ${PWD}/$builddir ${PWD}/${builddir}-* # ${PWD}/$packagename
}
